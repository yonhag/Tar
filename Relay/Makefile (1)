# Makefile for Relay project using SFML (Static Linking)

# Compiler
CXX = clang++

# Compiler flags
CXXFLAGS = -std=c++17 -Wall -DSFML_STATIC -I/usr/local/include/SFML

# SFML Libraries
SFML_LIB_DIR = /usr/local/lib
SFML_LIBS = -lsfml-network-s -lsfml-system-s

# Additional libraries needed for static and dynamic linking
ADDITIONAL_LIBS = -lpthread

# Executable name
EXEC = Relay

# Source files
SOURCES = $(wildcard *.cpp)

# Object files
OBJECTS = $(SOURCES:.cpp=.o)

# Build all targets
all: $(EXEC)

# Link the application
$(EXEC): $(OBJECTS)
	$(CXX) $(OBJECTS) -o $(EXEC) -L$(SFML_LIB_DIR) $(SFML_LIBS) $(ADDITIONAL_LIBS)

# Compile source files into object files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean build files
clean:
	rm -f $(OBJECTS) $(EXEC)

# Phony targets
.PHONY: all clean
